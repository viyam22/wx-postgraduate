.notice {
  padding: 30rpx;
  overflow: hidden;
  position: relative;
}
.notice .label {
  font-weight: bold;
  color: #202121;
  font-size: 30rpx;
  display: block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.notice .txt {
  color: #939799;
  font-size: 26rpx;
  margin-left: 90rpx;
  display: block;
  float: left;
}

.lists {
  background: #fff;
  padding-left: 30rpx;
}
.lists .item {
  line-height: 130rpx;
  position: relative;
  color: #494b4c;
  font-size: 30rpx;
  border-bottom: 1px #f5f5f5 solid;
}
.lists .item:last-child {
  border: none;
}
.lists .item .img {
  position: absolute;
  top: 0;
  right: 0;
  width: 81rpx;
  height: 87rpx;
}