/* # 没有商品提示 .view-empty */

.view-empty {
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.view-empty image {
  width: 150rpx;
}

.view-empty text {
  font-size: 32rpx;
  margin-top: 30rpx;
}

/*外部容器*/

.cart-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding-bottom: 98rpx;
}

.btn {
  font-size: 29rpx;
  color: white;
  background: #f35150;
  margin-top: 100rpx;
  border-radius: 9rpx;
  padding: 25rpx 200rpx 25rpx 200rpx;
}

/*整体列表*/

.carts-list {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.carts-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 180rpx;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  margin: 0 auto;
  position: relative;
  padding:20rpx 0;
  background-color: #fff

}

/* 复选框 */

.checkBoxArea {
  height: 210rpx;
  line-height: 210rpx;
  width: 100%;
  margin:0 20rpx;
  z-index: 99999;
}

/* 缩略图 */

.carts-image {
  position: absolute;
  top: 20rpx;
  left: 80rpx;
  width: 240rpx;
  height: 180rpx;
  border-radius: 3px;
}

/*title  */
.carts-text{
  width: 372rpx;
  padding-left: 340rpx;
  font-size: 30rpx;
  color: #313133;
  position: absolute;
  left: 0;
  top: 20rpx;
}
.carts-item-title {
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 18rpx 0;
  align-items: center;
}

.carts-item-title image {
  width: 40rpx;
  height: 40rpx;
}

.carts-item-title text {
  font-size: 30rpx;
  color: #000;
  margin-left: 14rpx;
}


.carts-right {
  padding-left: 340rpx;
  position: absolute;
  bottom:30rpx;
  font-size: 30rpx;
}

.carts-right .price {
  color: #ff7f4d;
}

.carts-title {
  color: #313133;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30prx;
  margin-left: 4rpx;
}

.carts-key-name {
  white-space: nowrap;
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
  display: block;
}

/*右下部分价格与数量*/

.carts-subtitle {
  font-size: 25rpx;
  color: darkgray;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.cart-del{
  position: absolute;
  bottom: 12rpx;
  right: 0;
  font-size: 24rpx;
  color: #999;
}

/*价格*/

.carts-price {
  color: #f60;
  font-size: 14px;
  line-height: 22px;
}

/*商品加减按钮*/

/*stepper容器*/

.stepper {
  overflow: hidden;
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
}

/* 加减号 */

.stepper text {
  width: 50rpx;
  line-height: 50rpx;
  text-align: center;
  float: left;
  font-size: 28rpx;
  color: #a7a7a7;
  background: #fff;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
  border: 1rpx solid #ccc;
  border-right: 0;
}

.stepper text.right {
  background: #fff;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  border-right: 1rpx solid #ccc;
  border-left: 0;
}

/*数值*/

.stepper>input {
  float: left;
  color: black;
  font-size: 24rpx;
  line-height: 50rpx;
  width: 80rpx;
  height: 50rpx;
  min-height: 0;
  text-align: center;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}
.inner{
    position: absolute;
    top:5px;
    height:200rpx;
    line-height:200rpx;

}
.inner.txt{
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding:0 10rpx;
    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.inner.del{
    background-color: #e64340;
    width: 180rpx;text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}
