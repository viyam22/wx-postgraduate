.itemBox{
    width:100%;
    height:234rpx;
}
.class-container .wrap {
  border-top: 1px #f0f0f0 solid;
  padding: 24rpx;
}
.class-container .wrap image {
  width: 240rpx;
  height: 178rpx;
  margin-right: 28rpx;
  float: left;
}
.class-container .wrap .info .title {
  color: #313133;
  font-size: 30rpx;
}
.class-container .wrap .info .num {
  color: #626266;
  font-size: 30rpx;
  display: block;
}
.class-container .wrap .info .current-price {
  color: #ff7f4d;
  font-size: 32rpx;
  font-weight: bold;
}
.class-container .wrap .info .origin-price {
  color: #c4c5cc;
  font-size: 26rpx;
  text-decoration:line-through;
  margin-left: 16rpx;
}
.item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height:100rpx;
    width:100%;
    font-size:30rpx;
    padding:0 40rpx 0 30rpx;
    box-sizing: border-box;
    color:#494b4d;
    margin-bottom:1rpx;
}
.explain{
     color:#bcc1c4;
     font-size:24rpx;
     padding-left: 30rpx;
}
