.tabs {
  line-height: 100rpx;
  border-bottom: 1px #f0f0f0 solid;
  background: #fff;
}
.tabs-item {
  width: 33.333%;
  text-align: center;
  color: #abb0b2;
  font-size: 30rpx;
  display: inline-block;
}
.tabs-item-active {
  line-height: 100rpx;
  display: inline-block;
  color: #0099ff!important;
  border-bottom: 2px #0099ff solid;
}

.class-container {
  background: #fff;
  margin-top: 18rpx;
}
.class-container .wrap {
  border-top: 1px #f0f0f0 solid;
  padding: 24rpx;
}
.class-container .wrap image {
  width: 240rpx;
  height: 178rpx;
  margin-right: 28rpx;
  float: left;
}
.class-container .wrap .info .title {
  color: #313133;
  font-size: 30rpx;
}
.class-container .wrap .info .type {
  color: #abacb2;
  font-size: 24rpx;
  display: block;
}
.class-container .wrap .info .current-price {
  color: #ff7f4d;
  font-size: 32rpx;
  font-weight: bold;
}
.class-container .wrap .info .origin-price {
  color: #c4c5cc;
  font-size: 26rpx;
  text-decoration:line-through;
  margin-left: 16rpx;
}