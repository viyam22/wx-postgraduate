.image {
  width: 100%;
  height: 376rpx;
  display: block;
}

.class-container {
  background: #fff;
}
.class-container .wrap {
  padding: 24rpx;
}
.class-container .wrap .info .title {
  color: #313133;
  font-size: 30rpx;
}
.class-container .wrap .info .current-price {
  color: #ff7f4d;
  font-size: 32rpx;
  font-weight: bold;
}
.class-container .wrap .info .origin-price {
  color: #c4c5cc;
  font-size: 26rpx;
  text-decoration: line-through;
  margin-left: 16rpx;
}
.class-container .wrap .info .sale {
  color: #7a7b80;
  font-size: 26rpx;
  margin-left: 16rpx;
  margin-left: 90rpx;
}

/* 详情图片 */
.desc-image {
  width: 100%;
  margin-top: 24rpx;
}

/* 底部购物栏 */
.footer {
  height: 100rpx;
}
.footer-wrap {
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.footer-wrap .item {
  width: 50%;
  float: left;
}
.bg-o {
  background: #ff7f4d;
}
.bg-b {
  background: #0099ff;
}
