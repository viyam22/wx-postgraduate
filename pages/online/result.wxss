.button-container {
  width: 100%;
  margin-top: 80rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.button-container .wrap {
  width: 50%;
  float: left;
}

.answer {
  line-height: 90rpx;
  font-size: 28rpx;
  color: #313233;
  padding-left: 30rpx;
}
.answer text {
  margin-right: 100rpx;
}
.analysis {
  background: #fff;
  padding: 30rpx;
  color: #404142;
  font-size: 30rpx;
}
.analysis text {
  display: block;
}
.analysis .desc {
  margin-top: 10rpx;
}
